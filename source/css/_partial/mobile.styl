@media mq-mobile
  #mobile-nav
    position: absolute
    top: 0
    left: 0
    width: mobile-nav-width
    height: 100%
    background: color-mobile-nav-background
    border-right: 1px solid #fefefe

@media mq-mobile
  .mobile-nav-link
    display: block
    color: color-grey
    text-decoration: none
    padding: 15px 20px
    font-weight: bold
    &:hover
      color: #fff

@media mq-normal        
  .header-title-graphic
    display: block
          
@media mq-large
  .header-title-graphic
    display: block
        
@media mq-tablet
  .header-title-graphic
    display: none
			
@media mq-mobile
  .header-title-graphic
    display: none
                    
                    



